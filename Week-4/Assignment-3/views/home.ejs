<html>
    <head>
        <title>Homepage</title>
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    </head>
    <body>
        <div class="body-content">
            <div class="form-box">
                <div class="button-box">
                    <div id="btn"></div>
                    <button type="button" class="toggle-btn" onclick="btn_top_click('login')">Log In</button>
                    <button type="button" class="toggle-btn" onclick="btn_top_click('register')">Register</button>
                </div>
                <div class="social-icons">
                    <img src="../img/fb.png">
                    <img src="../img/tw.png">
                    <img src="../img/gp.png">
                </div>
                <form id="login" class="input-group" action="/login" method="POST">
                    <input type="email" class="input-field" name="user_email" placeholder="Email" required>
                    <input type="password" class="input-field" name="user_password" placeholder="Password"
                            required>
                    <i class="bi bi-eye-slash" id="toggle-password"></i>
                    <!-- <input type="checkbox" class="check-box"><span>Remember Password</span> -->
                    <button type="submit" class="submit-btn" id="login-btn">Log in</button>
                </form>
                <form id="register" class="input-group" action="/register" method="POST">
                    <input type="email" class="input-field" name="register_email" placeholder="Email" required>
                    <input type="password" class="input-field" name="register_password" placeholder="Password" required>
                    <i class="bi bi-eye-slash" id="toggle-password"></i>
                    <input type="password" class="input-field" name="register_confirmpw" placeholder="Confirm password" required>
                    <p id="warning"></p>
                    <!-- <input type="checkbox" class="check-box"><span>I agree to the <a href="#">terms</a> & <a href="#">conditions</a></span> -->
                    <button type="submit" class="submit-btn" id="register-btn">Register</button>
                </form>
                <span id="notification">
                    <% if (flag === "re-login") { %>
                        <%= "You got the wrong email or password. Please retype!" %>
                    <% } %>
                    <% if (flag === "re-register") { %>
                        <%= "The email has been registered. Please change the email and retype!" %>
                    <% } %>
                    <% if (flag === "log-out") { %>
                        <%= "You are logged out! Re-enter email and password to log in again!" %>
                    <% } %>
                </span>
            </div>
        </div>
        <script src="/js/Homepage.js"></script>
    </body>
</html>